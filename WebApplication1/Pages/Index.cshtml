@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="~/css/moviesList.css" asp-append-version="true" />

<h1>Top 100</h1>

<form class="form-inline" method="get">
    @*<label class="sr-only" for="title">Title</label>
        <input type="text" class="form-control mb-2 mr-sm-2" id="title" placeholder="title">*@

    <input asp-for="@Model.Title" type="text"  class="form-control mb-2 mr-sm-2" id="inputTitle" placeholder="title">
    <input asp-for="@Model.Year"  type="text"  class="form-control mb-2 mr-sm-2" id="inputYear"  placeholder="year">
    

    @*<div class="form-check mb-2 mr-sm-2">
            <input class="form-check-input" type="checkbox" id="inlineFormCheck">
            <label class="form-check-label" for="inlineFormCheck">
                Remember me
            </label>
        </div>*@

    <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

<div class="list-group">
    @foreach (var movie in Model.Movies) {
        <div class="list-group-item">
            <img src="https://image.tmdb.org/t/p/w200/@movie.Poster" class="img-fluid" alt="Alternate Text" />
            <div class="movieData">
                <a class="title" href="/movie/@movie.MovieId">@movie.Title</a>
                <p class="year">@movie.Year</p>
            </div>
            <div class="movieScore">
                <span class="material-icons" id="star">&#xf0ec;</span>
                @movie.AverageScore
            </div>
        </div>
    }
</div>


