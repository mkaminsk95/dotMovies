@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<link rel="stylesheet" href="~/css/moviesList.css" asp-append-version="true" />

<form class="form-inline" method="get">
   
    <input asp-for="@Model.QueryTitle" class="form-control mb-2 mr-sm-2" id="inputTitle" placeholder="title">
   
    <input asp-for="@Model.QueryYear"  min="1900" max="2099" step="1" class="form-control mb-2 mr-sm-2" id="inputYear" placeholder="year" />

    <select asp-for="@Model.QueryGenre" class="custom-select mb-2 mr-sm-2">
        <option disabled selected> genre </option>
        
        @foreach (var genre in Model.Genres) {
        <option value="@genre">@genre</option>
        }
    </select>

    <button type="submit" class="btn btn-primary mb-2">Search</button>
</form>

<div class="list-group">
    @foreach (var movie in Model.Movies) {
        <div class="list-group-item">
            <img src="https://image.tmdb.org/t/p/w200/@movie.Poster" class="img-fluid" alt="Alternate Text" />
            <div class="movieData">
                <a class="title" href="/movie/@movie.MovieId">@movie.Title</a>
                <p class="year">@movie.Year</p>
            </div>
            <div class="movieScore">
                <span class="material-icons" id="star">&#xf0ec;</span>
                @movie.AverageScore
            </div>
        </div>
    }
</div>


