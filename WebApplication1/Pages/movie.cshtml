@page "{id:int}"
@model dotMovies.Pages.MovieModel
@{
    ViewData["Title"] = "movie";
    dotMovies.Models.Movie Movie = Model.Movie;
    
    string budget, revenue;
    
    if (Movie.Budget != 0)
        budget = Movie.Budget.ToString();
    else
        budget = "unknown";
    
    if (Movie.Revenue != 0)
        revenue = Movie.Revenue.ToString();
    else
        revenue = "unknown";
}

<link rel="stylesheet" href="~/css/movie.css" asp-append-version="true" />

<img src="https://image.tmdb.org/t/p/w200/@Movie.Poster" class="img-fluid" id="poster" alt="Alternate Text" />

<div id="movieData">
    <h1>@Movie.Title</h1>
    <p><span class="movieValue">@Movie.Year</span></p>
    <p><span class="movieVariable">runtime:</span>    <span class="movieValue">@Movie.Runtime</span></p>
    <p><span class="movieVariable">director:</span>   <span class="movieValue">@Movie.Director</span></p>
    <p><span class="movieVariable">screenplay:</span> <span class="movieValue">@Movie.Screenplay</span></p>
    <p><span class="movieVariable">budget:</span>     <span class="movieValue">@budget</span></p>
    <p><span class="movieVariable">revenue:</span>    <span class="movieValue">@revenue</span></p>
</div>

